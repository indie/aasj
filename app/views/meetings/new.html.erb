<%- model_class = Meeting -%>

<% if current_user %>

	<div class="page-header">

		<h2>Add a new meeting</h2>
	
	</div>


	<%= render 'meetings/form' %>

<hr>

	<h4>Import a CSV of Meetings</h4>

<%= form_tag import_meetings_path, multipart: true do %>
  <%= file_field_tag :file %>
  <br />
  <%= submit_tag "Import" %>

<% end %>
<% else %>

<p> Not so fast!  You must be signed in and authorized to add or update meetings. </p>


<% end %>